    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug mysh",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/src/mysh",
            "linux": {
                "name": "Debug mysh",
                "type": "cppdbg",
                "request": "attach",
                "program": "${workspaceFolder}/src/mysh",
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "osx": {
                "name": "Debug mysh",
                "type": "cppdbg",
                "request": "attach",
                "program": "${workspaceFolder}/src/mysh",
                "MIMode": "lldb"
            },
            "windows": {
                "name": "Debug mysh",
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceFolder}/src/mysh",
                "args": ["<", "../tc/a3/T_tc1.txt"],
                "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe"
            }
        }
    ],
}